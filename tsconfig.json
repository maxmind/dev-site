{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "lib": ["DOM", "ESNext", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "include": ["./assets/js/**/*", "./bin/**/*.ts", "./scripts/**/*.ts"]
}
