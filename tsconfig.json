{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext", "dom.iterable"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ],
  "include": ["./assets/js/**/*", "format-rawhtml.ts"]
}
